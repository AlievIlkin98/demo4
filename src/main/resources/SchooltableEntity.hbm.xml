<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.demo.student.SchooltableEntity" table="schooltable" schema="mydatabase">
        <id name="id">
            <column name="id" sql-type="bigint"/>
        </id>
        <property name="firstName">
            <column name="first_name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="lastName">
            <column name="last_name" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>